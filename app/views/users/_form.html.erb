<%= bootstrap_form_for @user, inline_errors: false do |f| %>
  <%= f.alert_message "Whoops!" %>
  <%= f.text_field :username, hide_label: true, placeholder: 'Username' %>
  <%= f.text_field :email, hide_label: true, placeholder: 'Email Address' %>
  <%= f.password_field :password, hide_label: true, placeholder: 'Password' %>
  <%= f.password_field :password_confirmation, hide_label: true, placeholder: 'Again' %>
  <%= f.submit @button, class: "btn btn-primary btn-lg btn-block" %>
<% end %>
